/*
  Josh's Custom CSS Reset
  https://www.joshwcomeau.com/css/custom-css-reset/
*/

*, *::before, *::after {
  box-sizing: border-box;
}

* {
  margin: 0;
}

@media (prefers-reduced-motion: no-preference) {
  html {
    interpolate-size: allow-keywords;
  }
}

body {
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

img, picture, video, canvas, svg {
  display: block;
  max-width: 100%;
}

input, button, textarea, select {
  font: inherit;
}

p, h1, h2, h3, h4, h5, h6 {
  overflow-wrap: break-word;
}

p {
  text-wrap: pretty;
}
h1, h2, h3, h4, h5, h6 {
  text-wrap: balance;
}

#root, #__next {
  isolation: isolate;
}

/* Base theme */
:root {
  /* Light content palette */
  --bg: #f6f8fc;              /* page background (light) */
  --bg-soft: #eef2f9;          /* soft surfaces (light) */
  --text: #0f1628;             /* primary text (dark on light) */
  --muted: #4b5565;            /* secondary text on light */
  --border: #e3e8f1;           /* borders on light */

  /* Accent */
  --accent: #2f7dff;
  --accent-2: #4dffa8;

  /* Dark surfaces for header/footer and contrast cards */
  --dark-bg: #0d0f12;
  --dark-soft: #14181e;
  --dark-text: #eaeef3;
  --dark-muted: #b7c0cb;
  --dark-border: #202632;
  --card-contrast: #0f1318;
}

html, body {
  height: 100%;
}

body {
  font-family: Manrope, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  color: var(--text);
  background: radial-gradient(1200px 800px at 80% -120px, rgba(47,125,255,0.10), transparent 60%),
              radial-gradient(900px 700px at -10% -120px, rgba(77,255,168,0.08), transparent 60%),
              var(--bg);
}

.container {
  width: min(1100px, 92%);
  margin-inline: auto;
}

.skip-link {
  position: absolute;
  left: -999px;
  top: auto;
  background: var(--accent);
  color: #001227;
  padding: 0.5rem 0.75rem;
  border-radius: 6px;
  z-index: 9999;
}
.skip-link:focus {
  left: 12px;
  top: 12px;
}

/* Header and Navigation */
.site-header {
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: saturate(1.2) blur(10px);
  background: color-mix(in oklab, var(--dark-bg) 92%, transparent);
  border-bottom: 1px solid var(--dark-border);
  color: var(--dark-text);
}
.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 0;
}
.brand {
  font-weight: 700;
  letter-spacing: 0.3px;
}
.brand a { color: var(--dark-text); text-decoration: none; }
.menu {
  display: flex;
  align-items: center;
  gap: 18px;
  list-style: none;
}
.menu a, .menu button {
  color: var(--dark-text);
  text-decoration: none;
  background: none;
  border: none;
  padding: 8px 10px;
  border-radius: 6px;
  cursor: pointer;
}
.menu a.active, .menu a[aria-current="page"] {
  background: color-mix(in oklab, var(--dark-soft) 80%, transparent);
}
.menu a:hover, .menu button:hover,
.menu a:focus-visible, .menu button:focus-visible {
  background: color-mix(in oklab, var(--dark-soft) 80%, transparent);
  outline: 2px solid transparent;
}
.menu-group {
  position: relative;
}
.submenu {
  position: absolute;
  left: 0;
  top: 100%; /* remove gap so hover doesn't break when moving cursor */
  display: none;
  min-width: 220px;
  padding: 8px;
  background: var(--dark-bg);
  border: 1px solid var(--dark-border);
  border-radius: 10px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.35);
}
.submenu li { list-style: none; }
.submenu a { display: block; padding: 10px 12px; border-radius: 8px; color: var(--dark-text); }
.submenu a:hover { background: var(--dark-soft); }
.menu-group:hover .submenu,
.menu-group:focus-within .submenu {
  display: block;
}

/* Hamburger (mobile) */
.hamburger {
  display: none;
  width: 40px;
  height: 40px;
  border-radius: 8px;
  background: color-mix(in oklab, var(--dark-soft) 80%, transparent);
  border: 1px solid var(--dark-border);
  align-items: center;
  justify-content: center;
  gap: 4px;
  flex-direction: column;
}
.hamburger span { display: block; width: 18px; height: 2px; background: var(--dark-text); border-radius: 2px; }

/* Hero */
.hero {
  padding: 72px 0 40px;
}
.hero-grid {
  display: grid;
  grid-template-columns: 1.1fr 1fr;
  align-items: center;
  gap: 22px;
}
.hero-copy { display: grid; gap: 12px; }
.hero-visual {
  border: 1px solid var(--dark-border);
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 12px 32px rgba(0,0,0,0.28);
}
.hero-visual img {
  width: 100%;
  height: 360px;
  object-fit: cover;
  display: block;
}
.hero h1 {
  font-size: clamp(2rem, 6vw, 3.2rem);
  line-height: 1.04;
}
.lead {
  margin-top: 14px;
  color: var(--muted);
  max-width: 68ch;
}

/* Global heading polish */
h1 { letter-spacing: -0.015em; }
h2, h3 { letter-spacing: -0.01em; }
.feature h2, .services h2, .cta h2 { margin-top: 6px; }
.feature h1, .services h1, .cta h1 { margin-bottom: 6px; }
.feature .container, .services .container, .cta .container { padding-top: 4px; }

.button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 14px;
  border-radius: 10px;
  border: 1px solid var(--border);
  color: var(--text);
  text-decoration: none;
  transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
}
.button:hover { transform: translateY(-1px); border-color: color-mix(in oklab, var(--border), var(--text) 20%); background: color-mix(in oklab, var(--bg-soft) 70%, transparent); }
.button.primary { background: linear-gradient(135deg, var(--accent), var(--accent-2)); color: #001227; border-color: transparent; }
.button.primary:hover { filter: saturate(1.05) brightness(1.02); }

/* Services */
.services { padding: 36px 0 8px; }
.services h2 { font-size: clamp(1.4rem, 3vw, 2rem); }
.section-intro { color: var(--muted); margin-top: 8px; }
.cards {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16px;
  margin-top: 18px;
}
.card {
  background: var(--card-contrast); /* keep contrasty dark cards */
  border: 1px solid var(--dark-border);
  border-radius: 14px;
  padding: 16px;
  transition: transform 180ms ease, border-color 180ms ease, box-shadow 180ms ease;
}
.card-thumb {
  width: 100%;
  height: 140px;
  object-fit: cover;
  border-radius: 10px;
  border: 1px solid var(--dark-border);
  margin-bottom: 10px;
  display: block;
}
.card:hover { transform: translateY(-2px); border-color: color-mix(in oklab, var(--dark-border), var(--dark-text) 25%); box-shadow: 0 10px 30px rgba(0,0,0,0.25); }
.card h3 { font-size: 1.1rem; color: var(--dark-text); }
.card p { color: var(--dark-muted); margin-top: 6px; }
.card .link { display: inline-block; margin-top: 10px; color: var(--accent); text-decoration: none; }
.card .link:hover { text-decoration: underline; }


/* Feature blocks */
.feature { padding: 42px 0; }
.feature.muted { background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.03) 10%, transparent); }
.feature h2 { font-size: clamp(1.4rem, 3vw, 2rem); }
.feature p { color: var(--muted); margin-top: 6px; max-width: 70ch; }

/* Feature split layout (text + side image) */
.feature-split {
  display: grid;
  grid-template-columns: 1.1fr 1fr;
  grid-template-areas: "content visual";
  align-items: start;
  gap: 18px;
  margin-top: 14px;
}
.feature-split .feature-content { grid-area: content; }
.feature-visual { grid-area: visual;
  border: 1px solid var(--dark-border);
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 10px 28px rgba(0,0,0,0.26);
}
.feature-visual img {
  display: block;
  width: 100%;
  height: 320px;
  object-fit: cover;
}

/* Plain variant: no frame or shadow, narrower graphic */
.feature-visual.plain {
  border: none;
  border-radius: 0;
  box-shadow: none;
  overflow: visible;
  display: grid;
  place-items: start center;
}
.feature-visual.plain img {
  width: 180px;
  height: auto;
  object-fit: contain;
  opacity: 0.7; /* slightly faded */
}

.feature-split.reverse {
  grid-template-areas: "visual content";
}

/* Lists */
.bullets { margin: 8px 0 0 1rem; color: var(--muted); display: grid; gap: 6px; }
.bullets li { list-style: disc; }

/* CTA */
.cta { padding: 48px 0 64px; }
.cta h2 { font-size: clamp(1.5rem, 3.5vw, 2.2rem); }
.cta p { color: var(--muted); margin-top: 8px; max-width: 70ch; }

/* Logo strip (partners) */
.logo-strip { padding: 18px 0 28px; }
.logo-strip .logos {
  display: grid;
  grid-template-columns: repeat(6, minmax(0, 1fr));
  align-items: center;
  gap: 20px;
  filter: saturate(0.4);
  opacity: 0.9;
}
.logo-strip img {
  max-height: 66px;
  width: auto;
  margin-inline: auto;
  object-fit: contain;
}
@media (max-width: 900px) {
  .logo-strip .logos { grid-template-columns: repeat(3, 1fr); gap: 16px; }
  .logo-strip img { max-height: 55px; }
}
@media (max-width: 640px) {
  .logo-strip .logos { grid-template-columns: repeat(2, 1fr); gap: 14px; }
  .logo-strip img { max-height: 48px; }
}

/* Subtle animations */
@keyframes fadeUp {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-in { animation: fadeUp 500ms ease both; }
.animate-delay-1 { animation-delay: 80ms; }
.animate-delay-2 { animation-delay: 160ms; }
.animate-delay-3 { animation-delay: 240ms; }

/* Apply animations to common blocks */
.hero .container { animation: fadeUp 600ms ease both; }
.services .card:nth-child(1) { animation: fadeUp 500ms ease both; }
.services .card:nth-child(2) { animation: fadeUp 500ms ease 100ms both; }
.services .card:nth-child(3) { animation: fadeUp 500ms ease 200ms both; }
.feature .container, .cta .container { animation: fadeUp 600ms ease both; }

@media (prefers-reduced-motion: reduce) {
  .button, .card, .hero .container, .services .card, .feature .container, .cta .container { transition: none !important; animation: none !important; }
}

/* Footer */
.site-footer { border-top: 1px solid var(--dark-border); background: var(--dark-bg); color: var(--dark-text); }
.site-footer .container { padding: 28px 0; }
.site-footer p { color: var(--dark-muted); }
.site-footer a { color: inherit; text-decoration: none; }
.site-footer a:hover, .site-footer a:focus { text-decoration: underline; color: var(--dark-text); }
.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  gap: 24px;
  align-items: start;
  padding-bottom: 14px;
  border-bottom: 1px solid var(--dark-border);
}
.footer-col h5 { margin-bottom: 6px; font-size: 0.95rem; color: var(--dark-text); }
.footer-brand { margin-bottom: 6px; }
.footer-muted { color: var(--dark-muted); }
.footer-address { font-style: normal; color: var(--dark-muted); }
.footer-bottom { display: flex; justify-content: space-between; align-items: center; padding-top: 14px; }

@media (max-width: 900px) {
  .footer-grid { grid-template-columns: 1fr 1fr; }
}
@media (max-width: 640px) {
  .footer-grid { grid-template-columns: 1fr; gap: 12px; }
  .footer-bottom { flex-direction: column; align-items: flex-start; gap: 6px; }
}

/* Responsive */
@media (max-width: 900px) {
  .hero-grid { grid-template-columns: 1fr; }
  .hero-visual img { height: 280px; }
  .feature-split { grid-template-columns: 1fr; grid-template-areas: "content" "visual"; }
  .feature-split img { height: 220px; }
  .cards { grid-template-columns: 1fr 1fr; }
  /* Enable hamburger behavior for tablets/smaller screens */
  .nav { position: relative; }
  .hamburger { display: inline-flex; }
  .nav > nav { display: none; position: absolute; right: 0; top: 54px; background: var(--dark-bg); border: 1px solid var(--dark-border); border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.35); }
  .nav > nav.open { display: block; }
  .menu { flex-direction: column; align-items: stretch; gap: 2px; padding: 8px; min-width: 240px; }
  .menu a, .menu button { padding: 8px 10px; text-align: left; }

  /* Also open menu on hover/focus for pointer-equipped small screens */
  @media (hover: hover) {
    .nav .hamburger:hover + nav,
    .nav .hamburger:focus-visible + nav,
    .nav > nav:hover,
    .nav > nav:focus-within {
      display: block;
    }
  }
}

@media (max-width: 640px) {
  .nav { position: relative; }
  .hamburger { display: inline-flex; }
  .nav > nav { display: none; position: absolute; right: 0; top: 54px; background: var(--dark-bg); border: 1px solid var(--dark-border); border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.35); }
  .nav > nav.open { display: block; }
  .menu { flex-direction: column; align-items: stretch; gap: 2px; padding: 8px; min-width: 240px; }
  .menu a, .menu button { padding: 8px 10px; text-align: left; }
  .cards { grid-template-columns: 1fr; }
  .hero { padding-top: 54px; }
  .hero-visual img { height: 220px; }
  .card-thumb { height: 120px; }
  .feature-visual img { height: 220px; }
}

/* Contact form */
.contact-form { margin-top: 16px; display: grid; gap: 12px; }
.contact-form .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
.contact-form label { display: grid; gap: 6px; color: var(--muted); }
.contact-form input, .contact-form textarea {
  width: 100%;
  padding: 10px 12px;
  border-radius: 10px;
  border: 1px solid var(--border);
  background: color-mix(in oklab, var(--bg) 85%, black 15%);
  color: var(--text);
}
.contact-form input:focus, .contact-form textarea:focus { outline: 2px solid var(--accent); outline-offset: 2px; }
@media (max-width: 640px) { .contact-form .grid { grid-template-columns: 1fr; } }

/* Contact page layout */
.contact-layout {
  display: grid;
  grid-template-columns: 0.672fr 1fr;
  gap: 24px;
  margin-top: 18px;
}
.contact-details { display: grid; gap: 14px; }
.contact-card {
  background: var(--card-contrast);
  border: 1px solid var(--dark-border);
  border-radius: 12px;
  padding: 16px;
}
.contact-card h3 { color: var(--dark-text); }
.contact-card p { color: var(--dark-muted); }
.contact-card a { color: inherit; text-decoration: none; }
.contact-card a:hover, .contact-card a:focus { text-decoration: underline; color: var(--dark-text); }
@media (max-width: 900px) {
  .contact-layout { grid-template-columns: 1fr; }
}

/* Contact image */
.contact-image {
  width: 100%;
  height: auto;
  border-radius: 12px;
  border: 1px solid var(--dark-border);
  box-shadow: 0 10px 30px rgba(0,0,0,0.25);
  margin-bottom: 14px;
}

/* Contact hero banner */
.contact-hero {
  margin: 0 auto 16px;
  max-width: 460px;
  border-radius: 14px;
  overflow: hidden;
  border: 1px solid var(--dark-border);
  box-shadow: 0 12px 32px rgba(0,0,0,0.28);
}
.contact-hero img {
  display: block;
  width: 100%;
  height: 300px;
  object-fit: cover;
}
@media (max-width: 640px) {
  .contact-hero { max-width: 100%; }
  .contact-hero img { height: 200px; }
}